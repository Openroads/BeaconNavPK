<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".about.AboutFragment">
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Shows approximate area for user position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toEndOf="@+id/cardView7"
            android:layout_marginStart="12dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false" app:cardCornerRadius="13dp"
            android:id="@+id/cardView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView">
        <ImageView
                android:layout_width="26dp"
                android:alpha="0.4"
                android:layout_height="24dp" app:srcCompat="@android:color/holo_green_dark"
                android:id="@+id/imageView7"/>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="Shows that selected location is the nearest one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false" app:cardCornerRadius="8dp"
            android:id="@+id/cardView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView11" android:layout_marginTop="2dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp" app:srcCompat="@android:color/holo_green_dark"
                    android:id="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardPreventCornerOverlap="false" app:cardCornerRadius="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp" app:srcCompat="@android:color/holo_red_dark"
                        android:id="@+id/imageView5"
                        app:layout_constraintTop_toTopOf="@+id/imageView6"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="Shows the nearest location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/cardView"
            android:layout_marginStart="16dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false" app:cardCornerRadius="8dp"
            android:id="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView10" android:layout_marginTop="2dp">
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp" app:srcCompat="@android:color/holo_green_dark"
                android:id="@+id/imageView"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false" app:cardCornerRadius="8dp"
            android:id="@+id/cardView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView9" android:layout_marginTop="2dp">
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp" app:srcCompat="@android:color/holo_red_dark"
                android:id="@+id/imageView3"/>
    </android.support.v7.widget.CardView>

    <TextView
            android:text="Created for master thesis by Dariusz Szyszlak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:textSize="16sp"/>
    <TextView
            android:text="Android Beacon Navigation Application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="16sp"
            android:textStyle="bold"/>
    <TextView
            android:text="Cracow University Of Technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textSize="16sp"/>
    <TextView
            android:text="Application legend:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:textSize="14sp"/>
    <TextView
            android:text="Shows selected location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/cardView3"
            android:layout_marginStart="16dp"/>

    <pk.edu.dariusz.beaconnavpk.navigation.NearBeaconsSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nearby_beacons_spinner"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView12"/>
    <TextView
            android:text="Displays nearby location list sorted by distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/nearby_beacons_spinner" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"/>

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false" app:cardCornerRadius="8dp"
            android:id="@+id/cardView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView13" android:layout_marginTop="2dp">
        <ImageView
                android:layout_width="16dp"
                android:layout_height="17dp" app:srcCompat="@android:drawable/ic_menu_compass"
                android:background="@color/colorAccent"
                android:id="@+id/imageView4"/>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="Selects the nearest location from the list"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView13" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/cardView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"/>
    <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/application_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" android:enabled="false" android:checked="true"/>
    <TextView
            android:text="Auto Selection checkbox. While checked, application automatically selects the nearest location from the list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/checkBox" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>