<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.NavigateFragment">
    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false" app:cardCornerRadius="8dp"
            android:id="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="21dp">
        <ImageView
                android:layout_width="16dp"
                android:layout_height="17dp" app:srcCompat="@android:color/holo_green_dark"
                android:id="@+id/imageView"/>
    </android.support.v7.widget.CardView>
    <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/mapImageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="175dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Here should appear image with map."
            app:srcCompat="@drawable/mieszkanie_plan"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginEnd="4dp" android:layout_marginStart="4dp"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/location_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedLocationLabel"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/nearbyBeaconsLabel"
            android:layout_marginStart="4dp" app:layout_constraintStart_toEndOf="@+id/cardView2"/>
    <pk.edu.dariusz.beaconnavpk.navigation.NearBeaconsSpinner
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nearby_beacons_spinner"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/show_message_button" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:gravity="end"/>
    <Button
            android:text="Show message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_message_button"
            android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:visibility="invisible"/>
    <Button
            android:text="Open schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_schedule_button"
            android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColorLink="@color/colorAccent"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:visibility="invisible"/>
    <TextView
            android:text="Nearby places:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nearbyBeaconsLabel"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="21dp"
            android:layout_marginStart="4dp" app:layout_constraintStart_toEndOf="@+id/cardView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedLocationText"
            app:layout_constraintStart_toEndOf="@+id/show_message_button"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/nearbyBeaconsLabel"/>
    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false" app:cardCornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/cardView2" app:layout_constraintTop_toTopOf="@+id/selectedLocationLabel">
        <ImageView
                android:layout_width="16dp"
                android:layout_height="17dp" app:srcCompat="@android:color/holo_red_dark"
                android:id="@+id/imageView2"/>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/compassButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_menu_compass"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp"/>
    <TextView
            android:text="Welcome in navigation.\nNo nearby location has been detected yet."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedLocationLabel" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/mapImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:gravity="center" android:textSize="16sp"/>
</android.support.constraint.ConstraintLayout>